{
    "manifest_version": 2,
    "name": "Replicon Fixer",
    "version": "1.1",

    "description": "Disables the 'Clock In' button after you click on it, so you don't clock in more than once.",

    "icons": {
        "512": "icons/bug.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.replicon.com/*/my/punch*"],
            "js": ["fixReplicon.js"]
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "fixReplicon@github.com"
        }
    }
}